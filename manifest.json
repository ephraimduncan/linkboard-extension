{
  "manifest_version": 3,
  "name": "Linkboard Extension",
  "version": "0.0.2",
  "permissions": ["activeTab", "storage", "tabs", "contextMenus", "notifications", "scripting"],
  "host_permissions": ["http://localhost:3000/*", "https://linkboard.dev/", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
